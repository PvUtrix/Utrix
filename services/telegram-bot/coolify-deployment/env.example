# Personal System Telegram Bot - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_user_id_here

# =============================================================================
# OPTIONAL API KEYS (for enhanced features)
# =============================================================================

# OpenAI API Key (for Whisper voice transcription)
OPENAI_API_KEY=your_openai_key_here

# ElevenLabs API Key (for advanced voice features)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Health Check Port
HEALTH_CHECK_PORT=8000

# Python Configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# =============================================================================
# COOLIFY SPECIFIC SETTINGS
# =============================================================================

# Application Name (used in logs and monitoring)
APP_NAME=personal-telegram-bot

# Environment (production, staging, development)
ENVIRONMENT=production

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable encryption for sensitive data
ENABLE_ENCRYPTION=true

# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Enable health monitoring
ENABLE_HEALTH_MONITORING=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Get your Telegram Bot Token from @BotFather on Telegram
# 2. Get your User ID by messaging @userinfobot on Telegram
# 3. OpenAI API Key is optional but enables voice transcription
# 4. ElevenLabs API Key is optional but enables advanced voice features
# 5. All sensitive values should be stored in Coolify environment variables
# 6. Never commit actual API keys to your Git repository
#
